<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<apiroConf  version="1" xmlns="http://apiro.com/apiro/v1/root">
    <loadOrder>3</loadOrder>
    <envProperties>

        <envProperty>
            <name>APIRO_EMAIL_HOST</name>
            <value>[MY_EMAIL_HOST]</value>
            <encrypted>false</encrypted>
        </envProperty>

        <envProperty>
            <name>APIRO_EMAIL_PORT</name>
            <value>993</value>
            <encrypted>false</encrypted>
        </envProperty>

        <envProperty>
            <name>APIRO_EMAIL_USERNAME</name>
            <value>[MY_EMAIL_USERNAME]</value>
            <encrypted>false</encrypted>
        </envProperty>

        <envProperty>
            <name>APIRO_EMAIL_PASSWORD</name>
            <value>[MY_EMAIL_PASSWORD]/value>
            <encrypted>false</encrypted><!--Change this to true once you provide an encrypted value-->
        </envProperty>

        <envProperty>
            <name>APIRO_EMAIL_PROVIDER</name>
            <value>imaps</value>
            <encrypted>false</encrypted>
        </envProperty>

    </envProperties>

</apiroConf>